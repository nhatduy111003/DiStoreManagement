@page
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #007bff; /* Blue background color */
        }

        .container {
            max-width: 420px;
            padding: 20px;
            background: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            text-align: center;
        }

        .logo {
            width: 80px;
            height: 80px;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #28a745;
            border: none;
        }

        .btn-primary:hover {
            background-color: #218838;
        }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            color: #6c757d;
            font-size: 0.9rem;
            margin: 25px 0;
        }

        .divider::before, .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: #dee2e6;
        }

        .divider:not(:empty)::before {
            margin-right: .75em;
        }

        .divider:not(:empty)::after {
            margin-left: .75em;
        }

        .form-check-input:checked {
            background-color: #28a745;
            border-color: #28a745;
        }

        @@media (max-width: 420px) {
            .container {
                width: 90%; /* Responsive container width */
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/" class="d-block">
            <img src="https://static-images.vnncdn.net/files/publish/2022/10/13/4a10a9df0bf4ccaa95e5-347.jpg" alt="Logo" class="logo"> <!-- New logo URL -->
        </a>
        <h3 class="fw-bold">Sign In</h3>

        <div class="divider">Or sign in with</div>

        <form method="post" aria-label="Sign In Form">
            <div class="mb-3">
                <label for="email" class="form-label visually-hidden">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Email Address" name="txtEmail" required aria-required="true">
            </div>
            <div class="mb-4">
                <label for="password" class="form-label visually-hidden">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" name="txtPassword" required aria-required="true">
            </div>

            <div class="d-flex justify-content-between mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe" aria-label="Remember me">
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <a href="reset-password.html" class="text-decoration-none text-primary">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill py-2">Sign In</button>
        </form>

        <p class="mt-4">Don’t have an account? <a href="signup.html" class="text-primary">Create one</a></p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>





