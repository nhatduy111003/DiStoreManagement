@page
@model Ass02Solution_PND.Pages.AdminPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 600px;
            margin-top: 50px;
        }
        h1 {
            font-weight: bold;
            color: #007bff; /* Bootstrap primary color */
        }
        h4 {
            margin-top: 20px;
            color: #343a40; /* Dark gray for subtitle */
        }
        .form-group {
            margin-bottom: 20px; /* Space between form groups */
        }
        .btn {
            border-radius: 8px; /* Rounded corners */
        }
        .btn-primary {
            background-color: #007bff; /* Bootstrap primary color */
        }
        .btn-primary:hover {
            background-color: #0056b3; /* Darker on hover */
        }
        .btn-back {
            color: #007bff; /* Bootstrap primary color */
            text-decoration: none;
        }
        .btn-back:hover {
            text-decoration: underline; /* Underline on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit User</h1>

        <h4>User Context</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="userContext.Id" />

            <div class="form-group">
                <label asp-for="userContext.Username" class="control-label"></label>
                <input asp-for="userContext.Username" class="form-control" />
                <span asp-validation-for="userContext.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userContext.Email" class="control-label"></label>
                <input asp-for="userContext.Email" class="form-control" />
                <span asp-validation-for="userContext.Email" class="text-danger"></span>
            </div>
              <div class="form-group">
                  <label asp-for="userContext.Password" class="control-label"></label>
                  <input asp-for="userContext.Password" type="password" class="form-control" />
                  <span asp-validation-for="userContext.Password" class="text-danger"></span>
              </div>
            <div class="form-group">
                <label asp-for="userContext.Role" class="control-label"></label>
                <input asp-for="userContext.Role" class="form-control" />
                <span asp-validation-for="userContext.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userContext.CreatedAt" class="control-label"></label>
                <input asp-for="userContext.CreatedAt" class="form-control" readonly />
                <span asp-validation-for="userContext.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userContext.UpdatedAt" class="control-label"></label>
                <input asp-for="userContext.UpdatedAt" class="form-control" readonly />
                <span asp-validation-for="userContext.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-page="./Index" class="btn btn-back">Back to List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
