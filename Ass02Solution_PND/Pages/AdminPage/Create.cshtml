@page
@model Ass02Solution_PND.Pages.AdminPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 500px;
            margin-top: 50px;
        }
        h1 {
            font-weight: bold;
            color: #343a40;
        }
        .form-label {
            font-weight: 500;
        }
        .form-control {
            border-radius: 8px;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 8px;
            width: 100%;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-back {
            color: #007bff;
            text-decoration: none;
            margin-top: 20px;
            display: inline-block;
        }
        .btn-back:hover {
            color: #0056b3;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Create New User</h1>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="userContext.Username" class="form-label">Username</label>
                <input asp-for="userContext.Username" class="form-control" />
                <span asp-validation-for="userContext.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="userContext.Email" class="form-label">Email</label>
                <input asp-for="userContext.Email" class="form-control" />
                <span asp-validation-for="userContext.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="userContext.Password" class="form-label">Password</label>
                <input asp-for="userContext.Password" class="form-control" type="password" />
                <span asp-validation-for="userContext.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="userContext.Role" class="form-label">Role</label>
                <input asp-for="userContext.Role" class="form-control" />
                <span asp-validation-for="userContext.Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mb-3">Create User</button>
        </form>

        <a asp-page="Index" class="btn-back">← Back to List</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
