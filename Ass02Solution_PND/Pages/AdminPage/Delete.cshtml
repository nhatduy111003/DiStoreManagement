@page
@model Ass02Solution_PND.Pages.AdminPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 600px;
            margin-top: 50px;
        }
        h1 {
            font-weight: bold;
            color: #dc3545; /* Bootstrap danger color */
        }
        h3 {
            color: #343a40;
        }
        dt {
            font-weight: bold;
        }
        dd {
            margin-bottom: 15px; /* Add spacing between description items */
        }
        .btn-danger {
            border-radius: 8px;
            margin-right: 10px;
        }
        .btn-back {
            color: #007bff; /* Bootstrap primary color */
            text-decoration: none;
            border-radius: 8px;
            border: 1px solid #007bff; /* Border to look like a button */
            padding: 8px 12px;
        }
        .btn-back:hover {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Confirmation</h1>

        <h3>Are you sure you want to delete this user?</h3>
        <div>
            <h4>User Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.Username)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.Username)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.Email)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.Password)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.Password)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.Role)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.Role)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.CreatedAt)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.CreatedAt)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.UpdatedAt)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.UpdatedAt)
                </dd>
            </dl>

            <form method="post" class="d-flex justify-content-between">
                <input type="hidden" asp-for="userContext.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn-back">Back to List</a>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
