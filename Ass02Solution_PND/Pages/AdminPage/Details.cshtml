@page
@model Ass02Solution_PND.Pages.AdminPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 600px;
            margin-top: 50px;
        }
        h1 {
            font-weight: bold;
            color: #007bff; /* Bootstrap primary color */
        }
        h4 {
            margin-top: 20px;
            color: #343a40; /* Dark gray for subtitle */
        }
        dt {
            font-weight: bold;
        }
        dd {
            margin-bottom: 15px; /* Add spacing between description items */
            color: #495057; /* Slightly lighter text color */
        }
        .btn {
            margin-right: 10px;
            border-radius: 8px; /* Rounded corners */
        }
        .btn-edit {
            background-color: #ffc107; /* Bootstrap warning color */
            color: white;
        }
        .btn-edit:hover {
            background-color: #e0a800; /* Darker on hover */
        }
        .btn-back {
            color: #007bff; /* Bootstrap primary color */
            border: 1px solid #007bff; /* Border to look like a button */
            padding: 8px 12px;
            text-decoration: none;
        }
        .btn-back:hover {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>User Details</h1>

        <div>
            <h4>User Context</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.Username)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.Username)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.Email)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.Password)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.Password)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.Role)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.Role)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.CreatedAt)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.CreatedAt)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userContext.UpdatedAt)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.userContext.UpdatedAt)
                </dd>
            </dl>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-page="./Edit" asp-route-id="@Model.userContext?.Id" class="btn btn-edit">Edit</a>
            <a asp-page="./Index" class="btn btn-back">Back to List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
