@page
@model Ass02Solution_PND.Pages.AdminPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            font-family: Arial, sans-serif; /* Consistent font family */
        }

        .container {
            max-width: 1200px; /* Maximum width for the container */
            margin-top: 30px; /* Top margin */
        }

        h1 {
            color: #007bff; /* Bootstrap primary color */
            margin-bottom: 20px; /* Spacing below the title */
        }

        .table th {
            background-color: #007bff; /* Header background */
            color: white; /* Header text color */
        }

        .table td {
            vertical-align: middle; /* Aligns text in the middle of cells */
        }

        .btn {
            border-radius: 5px; /* Rounded buttons */
            transition: background-color 0.3s, transform 0.3s; /* Transition for hover effects */
        }

            .btn:hover {
                transform: translateY(-2px); /* Lift effect on hover */
            }

        .btn-secondary {
            background-color: #6c757d; /* Secondary button color */
            border: none; /* Remove border */
        }

            .btn-secondary:hover {
                background-color: #5a6268; /* Darker shade on hover */
            }

        .action-buttons a {
            margin-right: 5px; /* Space between action buttons */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>User Management</h1>

        <div class="mb-3 d-flex justify-content-between">
            <a asp-page="Create" class="btn btn-success">Create New User</a>
            <a asp-page="/Login" class="btn btn-secondary">Logout</a>
        </div>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.userContext[0].Username)</th>
                    <th>@Html.DisplayNameFor(model => model.userContext[0].Email)</th>
                    <th>@Html.DisplayNameFor(model => model.userContext[0].Role)</th>
                    <th>@Html.DisplayNameFor(model => model.userContext[0].CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.userContext[0].UpdatedAt)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.userContext)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                        <td class="action-buttons">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>