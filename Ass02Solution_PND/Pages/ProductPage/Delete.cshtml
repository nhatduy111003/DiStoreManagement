@page
@model Ass02Solution_PND.Pages.ProductPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }
        .container {
            max-width: 600px; /* Maximum width for the container */
            margin-top: 30px; /* Top margin */
        }
        h1, h3 {
            color: #dc3545; /* Bootstrap danger color for headings */
        }
        .btn-danger {
            background-color: #dc3545; /* Danger button color */
            border-color: #dc3545; /* Border color */
        }
        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
            border-color: #bd2131; /* Darker border on hover */
        }
        .form-group {
            margin-top: 20px; /* Space between form elements */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Product</h1>

        <h3>Are you sure you want to delete this product?</h3>
        <div>
            <h4>Product Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.CreatedAt)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.CreatedAt)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Category)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Category.Name)
                </dd>
            </dl>

            <form method="post" class="form-group">
                <input type="hidden" asp-for="Product.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>