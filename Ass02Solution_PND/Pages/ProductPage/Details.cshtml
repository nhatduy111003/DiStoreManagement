@page
@model Ass02Solution_PND.Pages.ProductPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }
        .container {
            max-width: 600px; /* Max width for the content */
            margin-top: 30px; /* Top margin */
        }
        h1, h4 {
            color: #343a40; /* Dark gray for headings */
        }
        dt {
            font-weight: bold; /* Bold for definition terms */
        }
        .btn {
            margin-top: 20px; /* Space above buttons */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Product Details</h1>

        <div>
            <h4>Product Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.CreatedAt)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.CreatedAt)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product.Category)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product.Category.Name)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Product?.Id" class="btn btn-primary">Edit</a>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>