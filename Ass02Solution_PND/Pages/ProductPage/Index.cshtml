@page
@model Ass02Solution_PND.Pages.ProductPage.IndexModel

@{
    ViewData["Title"] = "Product Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Product Management</title>
    <style>
        .container {
            margin-top: 50px;
            max-width: 1000px;
        }

        h1 {
            color: #343a40;
            font-weight: bold;
        }

        .table-hover tbody tr:hover {
            background-color: #f2f4f7;
        }

        .btn-create {
            background-color: #28a745;
            color: white;
        }

        .btn-edit {
            background-color: #007bff;
            color: white;
        }

        .btn-details {
            background-color: #ffc107;
            color: white;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

        .btn-logout {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <a asp-page="Create" class="btn btn-create">+ Create New Product</a>
                <a asp-page="/Login" class="btn btn-logout ms-2">Logout</a> <!-- Logout Button -->
            </div>
        </div>

        <table class="table table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Product[0].ProductId)</th>
                    <th>@Html.DisplayNameFor(model => model.Product[0].Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Product[0].Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Product[0].CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.Product[0].CategoryName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Product)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ProductId" class="btn btn-edit btn-sm me-2">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.ProductId" class="btn btn-details btn-sm me-2">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.ProductId" class="btn btn-delete btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
